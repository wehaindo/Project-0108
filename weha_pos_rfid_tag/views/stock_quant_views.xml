<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add RFID Tag Count to Stock Quant Tree View -->
    <record id="view_stock_quant_tree_rfid" model="ir.ui.view">
        <field name="name">stock.quant.tree.rfid</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='quantity']" position="after">
                <field name="rfid_tag_count" string="RFID Tags" optional="show"/>
            </xpath>
        </field>
    </record>
    
    <!-- Add RFID Tag Count to Stock Quant Form View -->
    <record id="view_stock_quant_form_rfid" model="ir.ui.view">
        <field name="name">stock.quant.form.rfid</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='quantity']" position="after">
                <field name="rfid_tag_count"/>
            </xpath>
        </field>
    </record>
</odoo>
