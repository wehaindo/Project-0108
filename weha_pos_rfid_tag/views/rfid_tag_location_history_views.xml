<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Location History Tree View -->
    <record id="view_rfid_tag_location_history_tree" model="ir.ui.view">
        <field name="name">product.rfid.tag.location.history.tree</field>
        <field name="model">product.rfid.tag.location.history</field>
        <field name="arch" type="xml">
            <tree string="RFID Tag Location History" create="0" delete="0">
                <field name="move_date"/>
                <field name="rfid_tag_name"/>
                <field name="product_id"/>
                <field name="from_location_id"/>
                <field name="to_location_id"/>
                <field name="stock_move_id"/>
                <field name="user_id"/>
            </tree>
        </field>
    </record>
    
    <!-- Location History Form View -->
    <record id="view_rfid_tag_location_history_form" model="ir.ui.view">
        <field name="name">product.rfid.tag.location.history.form</field>
        <field name="model">product.rfid.tag.location.history</field>
        <field name="arch" type="xml">
            <form string="Location History" create="0" delete="0">
                <sheet>
                    <group>
                        <group>
                            <field name="rfid_tag_id"/>
                            <field name="rfid_tag_name"/>
                            <field name="product_id"/>
                        </group>
                        <group>
                            <field name="move_date"/>
                            <field name="user_id"/>
                            <field name="stock_move_id"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="from_location_id"/>
                        </group>
                        <group>
                            <field name="to_location_id"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes" placeholder="Movement notes..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Location History Search View -->
    <record id="view_rfid_tag_location_history_search" model="ir.ui.view">
        <field name="name">product.rfid.tag.location.history.search</field>
        <field name="model">product.rfid.tag.location.history</field>
        <field name="arch" type="xml">
            <search string="Search Location History">
                <field name="rfid_tag_name" string="RFID Tag"/>
                <field name="product_id" string="Product"/>
                <field name="to_location_id" string="Location"/>
                <filter string="Today" name="today" 
                        domain="[('move_date', '&gt;=', datetime.datetime.now().replace(hour=0, minute=0, second=0)), 
                                 ('move_date', '&lt;=', datetime.datetime.now().replace(hour=23, minute=59, second=59))]"/>
                <filter string="Last 7 Days" name="last_7_days" 
                        domain="[('move_date', '&gt;=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="RFID Tag" name="group_tag" 
                            context="{'group_by': 'rfid_tag_id'}"/>
                    <filter string="Product" name="group_product" 
                            context="{'group_by': 'product_id'}"/>
                    <filter string="To Location" name="group_location" 
                            context="{'group_by': 'to_location_id'}"/>
                    <filter string="Date" name="group_date" 
                            context="{'group_by': 'move_date'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Location History Action -->
    <record id="action_rfid_tag_location_history" model="ir.actions.act_window">
        <field name="name">RFID Location History</field>
        <field name="res_model">product.rfid.tag.location.history</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_last_7_days': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                No location history yet
            </p>
            <p>
                Location history tracks movements of RFID-tagged items through your warehouse.
                History is automatically created when stock moves are completed.
            </p>
        </field>
    </record>
    
    <!-- Menu Item -->
    <menuitem id="menu_rfid_tag_location_history"
              name="Location History"
              parent="weha_pos_rfid_tag.menu_product_rfid_tag_root"
              action="action_rfid_tag_location_history"
              sequence="2"/>
</odoo>
