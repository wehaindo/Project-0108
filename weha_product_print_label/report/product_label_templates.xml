<odoo>
    <!-- Professional Product Label 2x7 Template -->
    <template id="label_2x7">
        <t t-call="web.basic_layout">
            <div class="page" style="font-size: 0;">
                <style>
                    .label-2x7 { width: 49%; height: 38mm; padding: 2mm; border: 1pt solid #000; box-sizing: border-box; display: inline-block; vertical-align: top; page-break-inside: avoid; text-align: center; font-size: 12pt; margin: 1mm; overflow: hidden; }
                    .label-name { font-size: 16pt; font-weight: bold; line-height: 1.2; margin-bottom: 2mm; text-align: center; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; max-height: 40pt; }
                    .label-price { font-size: 22pt; font-weight: bold; text-align: center; color: #000; margin-bottom: 2mm; padding: 1.5mm 3mm; display: inline-block; }
                    .label-barcode { text-align: center; margin: 1mm 0; }
                    .label-barcode-num { font-size: 10pt; text-align: center; font-family: monospace; margin-top: 0.5mm; color: #333; font-weight: 600; }
                </style>
                <t t-foreach="quantity" t-as="product">
                    <t t-foreach="quantity[product]" t-as="barcode_qty">
                        <t t-set="barcode_value" t-value="barcode_qty[0]"/>
                        <t t-set="qty" t-value="barcode_qty[1]"/>
                        <t t-foreach="range(int(qty))" t-as="item">
                            <div class="label-2x7">
                                <div class="label-name" t-esc="product.name if product.name else ''"/>
                                <div class="label-price">
                                    <span t-if="pricelist and pricelist.currency_id" t-esc="pricelist.currency_id.symbol or '$'"/>
                                    <span t-elif="product.currency_id" t-esc="product.currency_id.symbol or '$'"/>
                                    <span t-else="">$</span>
                                    <span t-if="pricelist" t-esc="'%.0f' % pricelist._get_product_price(product, 1.0)"/>
                                    <span t-else="" t-esc="'%.0f' % (product.lst_price or 0)"/>
                                </div>
                                <t t-if="barcode_value and barcode_value != 'False'">
                                    <div class="label-barcode"><img t-att-src="'/report/barcode/Code128/%s?width=300&amp;height=50&amp;humanreadable=0' % barcode_value" style="max-width: 90%; height: 8mm;" alt="Barcode"/></div>
                                    <div class="label-barcode-num" t-esc="barcode_value"/>
                                </t>
                            </div>
                        </t>
                    </t>
                </t>
            </div>
        </t>
    </template>

