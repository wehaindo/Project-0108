<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="view_pos_data_log_list" model="ir.ui.view">
        <field name="name">pos.data.log.list</field>
        <field name="model">pos.data.log</field>
        <field name="arch" type="xml">
            <list string="POS Order Backups" decoration-info="state=='backup'" 
                  decoration-success="state=='imported'" decoration-muted="state=='duplicate'">
                <field name="name"/>
                <field name="type"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_pos_data_log_form" model="ir.ui.view">
        <field name="name">pos.data.log.form</field>
        <field name="model">pos.data.log</field>
        <field name="arch" type="xml">
            <form string="POS Order Backup">
                <header>
                    <button name="action_import_order" type="object" string="Import Order"
                            class="oe_highlight" invisible="state == 'imported'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="type"/>
                    </group>
                    <notebook>
                        <page string="POS Data" name="pos_data">
                            <field name="pos_data" widget="text"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_pos_data_log" model="ir.actions.act_window">
        <field name="name">POS Order Backups</field>
        <field name="res_model">pos.data.log</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No order backups yet
            </p>
            <p>
                Order backups are automatically created from POS when orders are validated.
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_pos_data_log"
              name="Order Backups"
              parent="point_of_sale.menu_point_root"
              action="action_pos_data_log"
              sequence="99"/>
</odoo>
