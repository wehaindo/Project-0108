<odoo noupdate="0">
    
    <!-- POS Config: Allow full access to configs in user's operating units -->
    <record id="ir_rule_pos_config_allowed_operating_units" model="ir.rule">
        <field name="model_id" ref="point_of_sale.model_pos_config"/>
        <field name="domain_force">
            ['|', ('operating_unit_id', '=', False),
            ('operating_unit_id', 'in', operating_unit_ids)]
        </field>
        <field name="name">POS Configs from allowed operating units</field>
        <field name="global" eval="True"/>
        <field eval="1" name="perm_unlink"/>
        <field eval="1" name="perm_write"/>
        <field eval="1" name="perm_read"/>
        <field eval="1" name="perm_create"/>
    </record>

