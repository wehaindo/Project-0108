<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- POS Order Form View - Show Operating Unit -->
    <record id="view_pos_order_form_operating_unit" model="ir.ui.view">
        <field name="name">pos.order.form.operating.unit</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='session_id']" position="after">
                <field name="operating_unit_id" readonly="1"/>
            </xpath>
        </field>
    </record>

    <!-- POS Order Tree View - Add Operating Unit -->
    <record id="view_pos_order_tree_operating_unit" model="ir.ui.view">
        <field name="name">pos.order.tree.operating.unit</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='session_id']" position="after">
                <field name="operating_unit_id" optional="show"/>
            </xpath>
        </field>
    </record>

    <!-- POS Order Search View - Add Operating Unit Filter -->
    <record id="view_pos_order_search_operating_unit" model="ir.ui.view">
        <field name="name">pos.order.search.operating.unit</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_order_search"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <field name="operating_unit_id"/>
                <filter string="Operating Unit" name="operating_unit" domain="[]" context="{'group_by': 'operating_unit_id'}"/>
            </xpath>
        </field>
    </record>
</odoo>
