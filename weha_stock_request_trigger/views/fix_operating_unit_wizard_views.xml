<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Fix Operating Unit Wizard -->
    <record id="view_fix_operating_unit_wizard_form" model="ir.ui.view">
        <field name="name">fix.operating.unit.wizard.form</field>
        <field name="model">fix.operating.unit.wizard</field>
        <field name="arch" type="xml">
            <form string="Fix Operating Unit Configuration Issues">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="issue_count" readonly="1"/> Operating Unit Configuration Issues Found
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="replenishment_rule_count" readonly="1"/>
                            <field name="orderpoint_count" readonly="1"/>
                        </group>
                        <group>
                            <field name="location_count" readonly="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Issues" name="issues">
                            <field name="issue_ids" nolabel="1">
                                <tree decoration-success="is_fixed" decoration-danger="not is_fixed">
                                    <field name="issue_type"/>
                                    <field name="record_name"/>
                                    <field name="warehouse_id"/>
                                    <field name="warehouse_ou_id"/>
                                    <field name="location_id"/>
                                    <field name="location_ou_id"/>
                                    <field name="expected_ou_id"/>
                                    <field name="fix_action"/>
                                    <field name="is_fixed"/>
                                    <button name="action_fix" 
                                            type="object" 
                                            string="Fix" 
                                            icon="fa-wrench"
                                            attrs="{'invisible': [('is_fixed', '=', True)]}"/>
                                    <button name="action_open_record" 
                                            type="object" 
                                            string="Open" 
                                            icon="fa-external-link"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Summary" name="summary">
                            <group>
                                <field name="issue_ids" mode="kanban" nolabel="1">
                                    <kanban>
                                        <field name="issue_type"/>
                                        <field name="record_name"/>
                                        <field name="description"/>
                                        <field name="fix_action"/>
                                        <field name="is_fixed"/>
                                        <templates>
                                            <t t-name="kanban-box">
                                                <div class="oe_kanban_global_click">
                                                    <div class="o_kanban_record_top">
                                                        <div class="o_kanban_record_headings">
                                                            <strong class="o_kanban_record_title">
                                                                <field name="record_name"/>
                                                            </strong>
                                                        </div>
                                                        <span class="badge badge-pill" t-att-class="record.is_fixed.raw_value ? 'badge-success' : 'badge-danger'">
                                                            <t t-if="record.is_fixed.raw_value">Fixed</t>
                                                            <t t-else="">Issue</t>
                                                        </span>
                                                    </div>
                                                    <div class="o_kanban_record_body">
                                                        <field name="description"/>
                                                    </div>
                                                    <div class="o_kanban_record_bottom">
                                                        <div class="oe_kanban_bottom_left">
                                                            <span class="badge badge-secondary">
                                                                <field name="issue_type"/>
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </t>
                                        </templates>
                                    </kanban>
                                </field>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button name="action_fix_all" 
                            string="Fix All Issues" 
                            type="object" 
                            class="btn-primary"
                            attrs="{'invisible': [('issue_count', '=', 0)]}"/>
                    <button name="action_view_issues" 
                            string="View Details" 
                            type="object" 
                            class="btn-secondary"
                            attrs="{'invisible': [('issue_count', '=', 0)]}"/>
                    <button string="Close" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_fix_operating_unit_wizard" model="ir.actions.act_window">
        <field name="name">Fix Operating Unit Configuration</field>
        <field name="res_model">fix.operating.unit.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_fix_operating_unit_wizard"
              name="Fix OU Configuration"
              parent="stock_request.menu_stock_request_main"
              action="action_fix_operating_unit_wizard"
              sequence="99"/>

</odoo>
