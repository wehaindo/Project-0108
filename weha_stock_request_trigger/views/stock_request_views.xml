<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Extend Stock Request Form View -->
    <record id="view_stock_request_form_replenishment" model="ir.ui.view">
        <field name="name">stock.request.form.replenishment</field>
        <field name="model">stock.request</field>
        <field name="inherit_id" ref="stock_request.view_stock_request_form"/>
        <field name="arch" type="xml">
            
            <!-- Add replenishment info after product_id -->
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="is_auto_generated" widget="badge" 
                       decoration-info="is_auto_generated"/>
                <field name="replenishment_rule_id" 
                       invisible="not is_auto_generated"
                       options="{'no_create': True}"/>
            </xpath>
            
        </field>
    </record>
    
    <!-- Extend Stock Request List View -->
    <record id="view_stock_request_list_replenishment" model="ir.ui.view">
        <field name="name">stock.request.list.replenishment</field>
        <field name="model">stock.request</field>
        <field name="inherit_id" ref="stock_request.view_stock_request_tree"/>
        <field name="arch" type="xml">
            
            <!-- Add auto-generated badge -->
            <xpath expr="//field[@name='state']" position="after">
                <field name="is_auto_generated" widget="badge" 
                       optional="show"/>
            </xpath>
            
        </field>
    </record>
    
    <!-- Extend Stock Request Search View -->
    <record id="view_stock_request_search_replenishment" model="ir.ui.view">
        <field name="name">stock.request.search.replenishment</field>
        <field name="model">stock.request</field>
        <field name="inherit_id" ref="stock_request.stock_request_search"/>
        <field name="arch" type="xml">
            
            <!-- Add filter for auto-generated requests -->
            <xpath expr="//filter[@name='cancel']" position="after">
                <separator/>
                <filter name="auto_generated" 
                        string="Auto Generated" 
                        domain="[('is_auto_generated', '=', True)]"/>
            </xpath>
            
        </field>
    </record>
    
</odoo>
