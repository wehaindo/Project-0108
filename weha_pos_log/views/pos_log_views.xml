<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_pos_log_tree" model="ir.ui.view">
        <field name="name">pos.log.tree</field>
        <field name="model">pos.log</field>
        <field name="arch" type="xml">
            <tree string="POS Logs" create="false" decoration-muted="is_synced==True">
                <field name="create_date" string="Date/Time"/>
                <field name="event_type"/>
                <field name="user_id"/>
                <field name="session_id"/>
                <field name="config_id"/>
                <field name="description"/>
                <field name="is_synced" widget="boolean_toggle"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_pos_log_form" model="ir.ui.view">
        <field name="name">pos.log.form</field>
        <field name="model">pos.log</field>
        <field name="arch" type="xml">
            <form string="POS Log" create="false" edit="false">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_related_session" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-desktop"
                                invisible="not session_id">
                            <span>View Session</span>
                        </button>
                        <button name="action_view_related_order" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-shopping-cart"
                                invisible="not order_id">
                            <span>View Order</span>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="event_type"/>
                            <field name="user_id"/>
                            <field name="create_date"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group>
                            <field name="session_id"/>
                            <field name="config_id"/>
                            <field name="order_id"/>
                            <field name="is_synced"/>
                            <field name="sync_date" invisible="not is_synced"/>
                        </group>
                    </group>
                    <group string="Details">
                        <field name="description" nolabel="1"/>
                    </group>
                    <group string="Event Data" invisible="not event_data">
                        <field name="event_data" widget="text" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_pos_log_search" model="ir.ui.view">
        <field name="name">pos.log.search</field>
        <field name="model">pos.log</field>
        <field name="arch" type="xml">
            <search string="Search POS Logs">
                <field name="user_id"/>
                <field name="session_id"/>
                <field name="config_id"/>
                <field name="event_type"/>
                <field name="description"/>
                <separator/>
                <filter string="Not Synced" name="not_synced" domain="[('is_synced', '=', False)]"/>
                <filter string="Synced" name="synced" domain="[('is_synced', '=', True)]"/>
                <separator/>
                <filter string="Login Events" name="login" domain="[('event_type', '=', 'login')]"/>
                <filter string="Logout Events" name="logout" domain="[('event_type', '=', 'logout')]"/>
                <filter string="Session Events" name="session" domain="[('event_type', 'in', ['session_open', 'session_close'])]"/>
                <filter string="Order Events" name="orders" domain="[('event_type', 'in', ['order_create', 'order_paid', 'order_cancel'])]"/>
                <filter string="Payment Events" name="payments" domain="[('event_type', 'in', ['payment', 'refund'])]"/>
                <filter string="Cash Events" name="cash" domain="[('event_type', 'in', ['cash_in', 'cash_out'])]"/>
                <filter string="Errors" name="errors" domain="[('event_type', '=', 'error')]"/>
                <separator/>
                <filter string="Today" name="today" domain="[('create_date', '&gt;=', datetime.datetime.now().replace(hour=0, minute=0, second=0))]"/>
                <filter string="Last 7 Days" name="last_7_days" 
                        domain="[('create_date', '&gt;=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <filter string="This Month" name="this_month" 
                        domain="[('create_date', '&gt;=', datetime.datetime.now().replace(day=1, hour=0, minute=0, second=0))]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Event Type" name="group_event_type" context="{'group_by': 'event_type'}"/>
                    <filter string="User" name="group_user" context="{'group_by': 'user_id'}"/>
                    <filter string="Session" name="group_session" context="{'group_by': 'session_id'}"/>
                    <filter string="POS Config" name="group_config" context="{'group_by': 'config_id'}"/>
                    <filter string="Sync Status" name="group_sync" context="{'group_by': 'is_synced'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'create_date:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_pos_log" model="ir.actions.act_window">
        <field name="name">POS Logs</field>
        <field name="res_model">pos.log</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_today': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No POS logs yet
            </p>
            <p>
                POS logs will appear here automatically when cashiers perform actions in the POS.
                You can track logins, logouts, orders, payments, and other events.
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_pos_log_root"
              name="POS Logs"
              parent="point_of_sale.menu_point_root"
              sequence="100"/>

    <menuitem id="menu_pos_log"
              name="Activity Logs"
              parent="menu_pos_log_root"
              action="action_pos_log"
              sequence="1"/>

</odoo>
