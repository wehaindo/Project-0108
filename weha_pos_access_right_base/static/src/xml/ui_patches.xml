<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <!-- Add delete button to orderline -->
    <t t-name="weha_pos_access_right_base.Orderline" t-inherit="point_of_sale.Orderline" t-inherit-mode="extension">
        <xpath expr="//li[hasclass('orderline')]" position="inside">
            <button class="btn btn-link text-danger p-2 orderline-delete-btn" 
                    t-on-click.stop="onClickDelete"
                    title="Delete Line">
                <i class="fa fa-times fa-lg"/>
            </button>
        </xpath>
    </t>

    <!-- Add Clear All button to ActionPad -->
    <t t-name="weha_pos_access_right_base.ActionpadWidget" t-inherit="point_of_sale.ActionpadWidget" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('actionpad')]" position="inside">
            <button class="btn btn-lg btn-light clear-all-btn w-100 mt-2" 
                    t-on-click="onClickClearAll">
                <i class="fa fa-trash me-2"/>
                <span>Clear All</span>
            </button>
        </xpath>
    </t>


</templates>
