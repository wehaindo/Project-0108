<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Revenue Sharing Period list View -->
    <record id="view_revenue_sharing_period_list" model="ir.ui.view">
        <field name="name">revenue.sharing.period.list</field>
        <field name="model">revenue.sharing.period</field>
        <field name="arch" type="xml">
            <list string="Revenue Sharing Periods" decoration-info="state=='draft'" decoration-success="state=='posted'" decoration-muted="state=='closed'">
                <field name="name"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="entry_count"/>
                <field name="total_revenue" sum="Total Revenue"/>
                <field name="total_shared" sum="Total Shared"/>
                <field name="state" widget="badge" decoration-info="state=='draft'" decoration-success="state in ('validated','posted')" decoration-muted="state=='closed'"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <!-- Revenue Sharing Period Form View -->
    <record id="view_revenue_sharing_period_form" model="ir.ui.view">
        <field name="name">revenue.sharing.period.form</field>
        <field name="model">revenue.sharing.period</field>
        <field name="arch" type="xml">
            <form string="Revenue Sharing Period">
                <header>
                    <button name="action_calculate_revenue_sharing" string="Calculate Revenue Sharing" type="object" 
                            class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_validate" string="Validate" type="object" 
                            class="oe_highlight" invisible="state != 'calculated'"/>
                    <button name="action_post_accounting" string="Post Accounting" type="object" 
                            class="oe_highlight" invisible="state != 'validated'"/>
                    <button name="action_close_period" string="Close Period" type="object" 
                            class="oe_highlight" invisible="state != 'posted'"/>
                    <button name="action_reset_to_draft" string="Reset to Draft" type="object" 
                            invisible="state in ('draft', 'closed')"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,calculated,validated,posted,closed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_entries" type="object" class="oe_stat_button" icon="fa-money">
                            <field name="entry_count" widget="statinfo" string="Entries"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="total_revenue" widget="monetary"/>
                            <field name="total_shared" widget="monetary"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Additional notes about this period..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Revenue Sharing Period Search View -->
    <record id="view_revenue_sharing_period_search" model="ir.ui.view">
        <field name="name">revenue.sharing.period.search</field>
        <field name="model">revenue.sharing.period</field>
        <field name="arch" type="xml">
            <search string="Revenue Sharing Periods">
                <field name="name"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <filter string="Draft" name="filter_draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Calculated" name="filter_calculated" domain="[('state', '=', 'calculated')]"/>
                <filter string="Validated" name="filter_validated" domain="[('state', '=', 'validated')]"/>
                <filter string="Posted" name="filter_posted" domain="[('state', '=', 'posted')]"/>
                <filter string="Closed" name="filter_closed" domain="[('state', '=', 'closed')]"/>
                <separator/>
                <filter string="Current Month" name="filter_current_month" 
                        domain="[('date_from', '&gt;=', (context_today() - relativedelta(day=1)).strftime('%Y-%m-%d')),
                                 ('date_to', '&lt;=', (context_today() + relativedelta(day=31)).strftime('%Y-%m-%d'))]"/>
                <filter string="Last Month" name="filter_last_month" 
                        domain="[('date_from', '&gt;=', (context_today() - relativedelta(months=1, day=1)).strftime('%Y-%m-%d')),
                                 ('date_to', '&lt;=', (context_today() - relativedelta(months=1, day=31)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_by_state" context="{'group_by': 'state'}"/>
                    <filter string="Month" name="group_by_month" context="{'group_by': 'date_from'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Revenue Sharing Period Action -->
    <record id="action_revenue_sharing_period" model="ir.actions.act_window">
        <field name="name">Revenue Sharing Periods</field>
        <field name="res_model">revenue.sharing.period</field>
        <field name="view_mode">list,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'list', 'view_id': ref('view_revenue_sharing_period_list')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('view_revenue_sharing_period_form')}),
        ]"/>
        <field name="context">{'search_default_filter_draft': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Revenue Sharing Period
            </p>
            <p>
                Periods are automatically created from POS orders. Click "Calculate Revenue Sharing" to process orders.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_revenue_sharing_period"
              name="Revenue Sharing Periods"
              parent="menu_revenue_sharing_root"
              action="action_revenue_sharing_period"
              sequence="20"/>

</odoo>
