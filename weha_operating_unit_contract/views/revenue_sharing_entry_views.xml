<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Revenue Sharing Entry list View -->
    <record id="view_revenue_sharing_entry_list" model="ir.ui.view">
        <field name="name">revenue.sharing.entry.list</field>
        <field name="model">revenue.sharing.entry</field>
        <field name="arch" type="xml">
            <list string="Revenue Sharing Entries (Aggregated)" decoration-info="state=='draft'" decoration-success="state=='posted'">
                <field name="period_id"/>
                <field name="source_ou_id"/>
                <field name="target_ou_id"/>
                <field name="order_count" sum="Total Orders"/>
                <field name="line_count" sum="Total Lines"/>
                <field name="total_amount" sum="Total Revenue"/>
                <field name="share_percentage" widget="percentage" optional="hide"/>
                <field name="share_amount" sum="Total Shared"/>
                <field name="state" widget="badge" decoration-info="state=='draft'" decoration-success="state=='posted'"/>
                <field name="currency_id" invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Revenue Sharing Entry Form View -->
    <record id="view_revenue_sharing_entry_form" model="ir.ui.view">
        <field name="name">revenue.sharing.entry.form</field>
        <field name="model">revenue.sharing.entry</field>
        <field name="arch" type="xml">
            <form string="Revenue Sharing Entry (Aggregated)">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,validated,posted"/>
                </header>
                <sheet>
                    <div class="alert alert-info" role="alert">
                        <strong>Aggregated Entry:</strong> This entry represents the sum of 
                        <field name="order_count" class="oe_inline"/> order(s) with 
                        <field name="line_count" class="oe_inline"/> line(s) 
                        for the period <field name="period_id" class="oe_inline" readonly="1"/>.
                    </div>
                    <group>
                        <group string="Period &amp; Date">
                            <field name="period_id"/>
                            <field name="date"/>
                        </group>
                        <group string="Statistics">
                            <field name="order_count"/>
                            <field name="line_count"/>
                        </group>
                    </group>
                    <group>
                        <group string="Operating Units">
                            <field name="source_ou_id"/>
                            <field name="target_ou_id"/>
                        </group>
                        <group string="Revenue Sharing Rule">
                            <field name="rule_id"/>
                            <field name="rule_line_id"/>
                        </group>
                    </group>
                    <group>
                        <group string="Amounts">
                            <field name="currency_id" invisible="1"/>
                            <field name="total_amount" widget="monetary"/>
                            <field name="share_percentage" widget="percentage"/>
                            <field name="share_amount" widget="monetary" class="oe_subtotal_footer_separator"/>
                        </group>
                        <group string="Accounting">
                            <field name="move_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Revenue Sharing Entry Search View -->
    <record id="view_revenue_sharing_entry_search" model="ir.ui.view">
        <field name="name">revenue.sharing.entry.search</field>
        <field name="model">revenue.sharing.entry</field>
        <field name="arch" type="xml">
            <search string="Revenue Sharing Entries">
                <field name="period_id"/>
                <field name="source_ou_id"/>
                <field name="target_ou_id"/>
                <filter string="Draft" name="filter_draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Validated" name="filter_validated" domain="[('state', '=', 'validated')]"/>
                <filter string="Posted" name="filter_posted" domain="[('state', '=', 'posted')]"/>
                <separator/>
                <filter string="This Month" name="filter_this_month" 
                        domain="[('date', '&gt;=', (context_today() - relativedelta(day=1)).strftime('%Y-%m-%d 00:00:00')),
                                 ('date', '&lt;=', (context_today() + relativedelta(day=31)).strftime('%Y-%m-%d 23:59:59'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Period" name="group_by_period" context="{'group_by': 'period_id'}"/>
                    <filter string="Source OU" name="group_by_source" context="{'group_by': 'source_ou_id'}"/>
                    <filter string="Target OU" name="group_by_target" context="{'group_by': 'target_ou_id'}"/>
                    <filter string="Rule" name="group_by_rule" context="{'group_by': 'rule_id'}"/>
                    <filter string="Status" name="group_by_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Revenue Sharing Entry Pivot View -->
    <record id="view_revenue_sharing_entry_pivot" model="ir.ui.view">
        <field name="name">revenue.sharing.entry.pivot</field>
        <field name="model">revenue.sharing.entry</field>
        <field name="arch" type="xml">
            <pivot string="Revenue Sharing Analysis">
                <field name="target_ou_id" type="row"/>
                <field name="period_id" type="col"/>
                <field name="share_amount" type="measure"/>
                <field name="total_amount" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Revenue Sharing Entry Graph View -->
    <record id="view_revenue_sharing_entry_graph" model="ir.ui.view">
        <field name="name">revenue.sharing.entry.graph</field>
        <field name="model">revenue.sharing.entry</field>
        <field name="arch" type="xml">
            <graph string="Revenue Sharing Chart" type="bar" stacked="True">
                <field name="target_ou_id"/>
                <field name="share_amount" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Revenue Sharing Entry Action -->
    <record id="action_revenue_sharing_entry" model="ir.actions.act_window">
        <field name="name">Revenue Sharing Entries</field>
        <field name="res_model">revenue.sharing.entry</field>
        <field name="view_mode">list,form,pivot,graph</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'list', 'view_id': ref('view_revenue_sharing_entry_list')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('view_revenue_sharing_entry_form')}),
            (0, 0, {'view_mode': 'pivot', 'view_id': ref('view_revenue_sharing_entry_pivot')}),
            (0, 0, {'view_mode': 'graph', 'view_id': ref('view_revenue_sharing_entry_graph')}),
        ]"/>
        <field name="context">{'search_default_filter_this_month': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No revenue sharing entries yet
            </p>
            <p>
                Entries are created automatically when you calculate revenue sharing in a period.
            </p>
            <p>
                <strong>Note:</strong> Entries are <strong>aggregated</strong> by period, source OU, target OU, and rule.
                This reduces data volume significantly while maintaining accurate totals.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_revenue_sharing_entry"
              name="Revenue Sharing Entries"
              parent="menu_revenue_sharing_root"
              action="action_revenue_sharing_entry"
              sequence="30"/>

</odoo>
