<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="adevx_pos_sales_order.CreateSaleOrderButton" t-inherit="point_of_sale.ControlButtons"
       t-inherit-mode="extension">
            <xpath expr="//t[@t-if='props.showRemainingButtons']/div/OrderlineNoteButton" position="after">
                <button t-att-class="buttonClass"
                        t-if="pos.config.report_sale_summary"
                        t-on-click="() => this.printZReport()">
                     <i class="fa fa-line-chart"/>
                    Z Report
                </button>
            </xpath>
    </t>
</templates>
