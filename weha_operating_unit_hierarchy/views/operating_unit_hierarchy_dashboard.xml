<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Operating Unit Hierarchy List View -->
    <record id="view_operating_unit_hierarchy_list" model="ir.ui.view">
        <field name="name">operating.unit.hierarchy.list</field>
        <field name="model">operating.unit</field>
        <field name="arch" type="xml">
            <list string="Operating Unit Hierarchy" 
                  decoration-bf="parent_id == False"
                  decoration-primary="ou_type_id.code == 'HO'"
                  decoration-info="ou_type_id.code == 'DC'"
                  decoration-success="ou_type_id.code == 'STORE'">
                <field name="name"/>
                <field name="code"/>
                <field name="ou_type_id"/>
                <field name="level"/>
                <field name="parent_path"/>
                <field name="child_count"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <!-- Operating Unit Kanban View for Dashboard -->
    <record id="view_operating_unit_hierarchy_kanban" model="ir.ui.view">
        <field name="name">operating.unit.hierarchy.kanban</field>
        <field name="model">operating.unit</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" create="false">
                <field name="id"/>
                <field name="name"/>
                <field name="code"/>
                <field name="ou_type_id"/>
                <field name="parent_id"/>
                <field name="level"/>
                <field name="child_count"/>
                <field name="parent_path"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <span class="o_kanban_record_subtitle">
                                        <field name="code"/>
                                    </span>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <div class="row">
                                    <div class="col-6">
                                        <span class="badge badge-pill" t-att-class="
                                            record.ou_type_id.raw_value and record.ou_type_id.raw_value[1] == 'Head Office' ? 'badge-primary' :
                                            record.ou_type_id.raw_value and record.ou_type_id.raw_value[1] == 'Distribution Center' ? 'badge-info' :
                                            'badge-success'
                                        ">
                                            <field name="ou_type_id"/>
                                        </span>
                                    </div>
                                    <div class="col-6 text-right">
                                        <span class="badge badge-secondary">
                                            Level <field name="level"/>
                                        </span>
                                    </div>
                                </div>
                                <div class="mt-2" t-if="record.parent_id.raw_value">
                                    <i class="fa fa-sitemap"/> Parent: <field name="parent_id"/>
                                </div>
                                <div class="mt-1" t-if="record.child_count.raw_value > 0">
                                    <i class="fa fa-users"/> Children: <field name="child_count"/>
                                </div>
                                <div class="mt-1">
                                    <small class="text-muted">
                                        <i class="fa fa-list-ul"/> <field name="parent_path"/>
                                    </small>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Operating Unit Graph View - Hierarchy Levels -->
    <record id="view_operating_unit_hierarchy_graph" model="ir.ui.view">
        <field name="name">operating.unit.hierarchy.graph</field>
        <field name="model">operating.unit</field>
        <field name="arch" type="xml">
            <graph string="Operating Unit Distribution" type="bar" stacked="1">
                <field name="ou_type_id"/>
                <field name="level" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Operating Unit Pivot View -->
    <record id="view_operating_unit_hierarchy_pivot" model="ir.ui.view">
        <field name="name">operating.unit.hierarchy.pivot</field>
        <field name="model">operating.unit</field>
        <field name="arch" type="xml">
            <pivot string="Operating Unit Analysis">
                <field name="ou_type_id" type="row"/>
                <field name="parent_id" type="row"/>
                <field name="level" type="measure"/>
                <field name="child_count" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Hierarchy Dashboard Action -->
    <record id="action_operating_unit_hierarchy_dashboard" model="ir.actions.act_window">
        <field name="name">Hierarchy Dashboard</field>
        <field name="res_model">operating.unit</field>
        <field name="view_mode">list,kanban,form,graph,pivot</field>
        <field name="view_id" ref="view_operating_unit_hierarchy_list"/>
        <field name="search_view_id" ref="view_operating_unit_search_hierarchy"/>
        <field name="context">{
            'list_view_ref': 'weha_operating_unit_hierarchy.view_operating_unit_hierarchy_list',
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Operating Unit Hierarchy Dashboard
            </p>
            <p>
                View your organization structure in a list format with hierarchy.<br/>
                See parent-child relationships and hierarchy levels.
            </p>
        </field>
    </record>

    <!-- Menu Item for Dashboard -->
    <menuitem id="menu_operating_unit_dashboard"
              name="Hierarchy Dashboard"
              parent="menu_operating_unit_hierarchy_root"
              action="action_operating_unit_hierarchy_dashboard"
              sequence="5"/>

</odoo>
